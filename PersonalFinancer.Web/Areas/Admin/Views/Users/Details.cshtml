@model UserDetailsViewModel
@{
	ViewData["Title"] = "User Details";
}

<h1 class="display-6 text-center">@ViewData["Title"]</h1>
<div class="row">
	<div class="col-md-4">
		<div class="card">
			<div class="card-header">
				<h6>User Information:</h6>
			</div>
			<table class="table table-hover">
				<tbody>
					<tr>
						<td>First Name:</td>
						<td>@Model.FirstName</td>
					</tr>
					<tr>
						<td>Last Name:</td>
						<td>@Model.LastName</td>
					</tr>
					<tr>
						<td>Email:</td>
						<td>@Model.Email</td>
					</tr>
					<tr>
						<td>Phone Number:</td>
						<td>@Model.PhoneNumber</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
	<div class="col-md-8">
		<div class="card">
			<div class="card-header">
				<h6>User Accounts</h6>
			</div>
			<div class="row">
				@await Component.InvokeAsync("AccountCardList", new { Model.Accounts, area = "Admin", controller = "Users", action = "AccountDetails" })
			</div>
		</div>
	</div>
</div>