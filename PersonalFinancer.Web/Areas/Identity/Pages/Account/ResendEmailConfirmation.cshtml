@page
@model ResendEmailConfirmationModel
@{
	ViewData["Title"] = "Resend email confirmation";
}

<h1 class="text-center display-6">@ViewData["Title"]</h1>
<h2 class="text-center display-6 fs-4">Enter your email.</h2>
<div class="row d-flex justify-content-center">
	<div class="col-md-4">
		<hr />
		<form method="post">
			<div asp-validation-summary="All" class="text-danger"></div>
			<div class="form-floating formField">
				<input asp-for="Input.Email" class="form-control" aria-required="true" />
				<label asp-for="Input.Email" class="form-label"></label>
				<span asp-validation-for="Input.Email" class="text-danger"></span>
			</div>
			<button type="submit" class="w-100 btn btn-lg btn-secondary">Resend</button>
		</form>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
