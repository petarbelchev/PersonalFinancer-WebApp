@model AccountViewModel

<div class="row">
	<div>
		<p class="fs-1">You are going to delete Account: @Model.Name</h1>
		<p class="fs-2">What should I delete?</p>

		<a asp-controller="Account" asp-action="Delete"
		   asp-route-id="@Model.Id" asp-route-shouldDeleteTransactions="False" class="btn btn-danger">Delete account only!</a>
		<a asp-controller="Account" asp-action="Delete"
		   asp-route-id="@Model.Id" asp-route-shouldDeleteTransactions="True" class="btn btn-danger">Delete account and transactions!</a>
		<a asp-controller="Account" asp-action="Details"
		   asp-route-id="@Model.Id" class="btn btn-secondary">Do not delete anythink.</a>
	</div>
</div>