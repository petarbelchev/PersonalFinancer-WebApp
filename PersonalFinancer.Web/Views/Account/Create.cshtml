@using PersonalFinancer.Services.Account.Models;

@model CreateAccountFormModel
@{
	ViewData["Title"] = "Create Account";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
	<div class="col-md-4">
		<section>
			<form method="post">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-floating">
					<input asp-for="@Model.Name" class="form-control" />
					<label asp-for="@Model.Name" class="form-label"></label>
					<span asp-validation-for="@Model.Name" class="text-danger"></span>
				</div>
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-floating">
					<input asp-for="@Model.Balance" class="form-control" />
					<label asp-for="@Model.Balance" class="form-label"></label>
					<span asp-validation-for="@Model.Balance" class="text-danger"></span>
				</div>
				<div class="dropdown-menu position-static d-grid gap-1 p-2 rounded-3 mx-0 shadow w-220px">
					<label asp-for="@Model.AccountTypeId" class="form-label"></label>
					<select asp-for="@Model.AccountTypeId">
						@foreach (var accountType in @Model.AccountTypes)
						{
							<option value="@accountType.Id">@accountType.Name</option>
						}
					</select>
				</div>
				<div class="dropdown-menu position-static d-grid gap-1 p-2 rounded-3 mx-0 shadow w-220px">
					<label asp-for="@Model.CurrencyId" class="form-label"></label>
					<select asp-for="@Model.CurrencyId">
						@foreach (var currency in @Model.Currencies)
						{
							<option value="@currency.Id">@currency.Name</option>
						}
					</select>
				</div>
				<div>
					<button type="submit" class="w-100 btn btn-lg btn-primary">Create</button>
				</div>
			</form>
		</section>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}


