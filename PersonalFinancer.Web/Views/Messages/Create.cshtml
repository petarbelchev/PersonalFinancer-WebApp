@using PersonalFinancer.Web.Models.Message;
@model MessageModel
@{
	ViewData["Title"] = "Create Message";
}

<p class="display-6 text-center">@ViewData["Title"]</p>
<div class="row d-flex justify-content-center">
	<div class="col-sm-6">
		<form method="post">
			<div class="mb-3">
				<label asp-for=@Model.Subject class="form-label"></label>
				<input type="text" asp-for=@Model.Subject class="form-control" placeholder="Write your message's subject here...">
				<span asp-validation-for="@Model.Subject" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="@Model.Content" class="form-label"></label>
				<textarea asp-for=@Model.Content class="form-control" rows="5" placeholder="Write your message here..."></textarea>
				<span asp-validation-for="@Model.Content" class="text-danger"></span>
			</div>
			<div>
				<button type="submit" class="w-100 btn btn-lg btn-success">Send Message</button>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}