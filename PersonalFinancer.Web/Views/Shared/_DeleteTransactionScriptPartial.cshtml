<script>
	document.getElementById('tableBody').addEventListener('click', async (e) => {
		if (e.target.tagName == 'BUTTON') {
			let response = await fetch("@Url.Action("DeleteTransaction", "TransactionApi")?transactionId=" + e.target.id);

			if (response.status == 200) {
				let transactionRow = e.target.parentElement.parentElement;
				document.getElementById('tableBody').removeChild(transactionRow);
			} else {
				let error = response.json();
				alert(error);
			}
		}
	})
</script>