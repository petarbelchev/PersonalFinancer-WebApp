<div class="row">
	<div class="offset-lg-3 col-lg-6">
		<div class="m-4">
			<form method="get" class="input-group shadow rounded-3">
				<input type="text" name="search" class="form-control" placeholder="Search for a message..." value="@ViewBag.Search">
				<button class="btn btn-secondary" type="submit">Search</button>
			</form>
		</div>
	</div>
	<div class="justify-content-center">
		<div id="tableContainer" class="card shadow">
			<div class="card-header">
				<h1 class="display-6 text-center">@ViewData["Title"]</h1>
			</div>
			<div class="table-responsive">
				<table class="table table-hover align-middle">
					<thead>
						<tr>
							<th></th>
							<th class="w-50" scope="col">Subject</th>
							<th scope="col">Date</th>
						</tr>
					</thead>
					<tbody>
						@*Place for messages data*@
					</tbody>
				</table>
			</div>
		</div>
		<partial name="_PaginationPartial" />
	</div>
</div>
