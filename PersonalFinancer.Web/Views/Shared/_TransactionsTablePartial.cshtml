@using System.Globalization;
@using PersonalFinancer.Data.Models.Enums;

@*Transaction Details Modal*@
<div class="modal fade" id="staticBackdrop" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h1 class="modal-title fs-5" id="staticBackdropLabel">Transaction Details</h1>
				<a role="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></a>
			</div>
			<div class="modal-body">
				@*Spinner*@
				<div class="d-flex justify-content-center">
					<div class="spinner-border" role="status"></div>
				</div>
				@*Place for transaction data*@
			</div>
			<div class="modal-footer">
				<p class="text-center mt-2" style="display: none;">
					<i>This is an initial balance transaction. If you want to change the transaction amount, you simply adjust the account's balance.</i>
				</p>
				<a class="w-100 btn btn-lg btn-warning" style="display: none;">Edit</a>
				<a class="w-100 btn btn-lg btn-danger">Delete</a>
			</div>
		</div>
	</div>
</div>

@*Table*@
<div class="table-responsive">
	<table class="table table-hover">
		<thead>
			<tr>
				<th scope="col"></th>
				<th scope="col">Date</th>
				<th scope="col">Category</th>
				<th scope="col">Amount</th>
				<th scope="col">Reference</th>
			</tr>
		</thead>
		<tbody style="vertical-align: text-top;">
			@*Spinner*@
			<tr>
				<td colspan="5">
					<div class="d-flex justify-content-center">
						<div class="spinner-border" role="status"></div>
					</div>
				</td>
			</tr>
			@*Place for transactions data*@
		</tbody>
	</table>
</div>