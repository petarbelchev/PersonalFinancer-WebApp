@using PersonalFinancer.Data.Enums
@using PersonalFinancer.Services.Account.Models

@model CreateTransactionFormModel
@{
	ViewData["Title"] = "Create Transaction";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
	<div class="col-md-4">
		<section>
			<form method="post">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-floating">
					<input asp-for="@Model.Amount" class="form-control" />
					<label asp-for="@Model.Amount" class="form-label"></label>
					<span asp-validation-for="@Model.Amount" class="text-danger"></span>
				</div>
				<div class="dropdown-menu position-static d-grid gap-1 p-2 rounded-3 mx-0 shadow w-220px">
					<label asp-for="@Model.CategoryId" class="form-label"></label>
					<select asp-for="@Model.CategoryId">
						@foreach (var category in @Model.Categories)
						{
							<option value="@category.Id">@category.Name</option>
						}
					</select>
				</div>
				<div class="dropdown-menu position-static d-grid gap-1 p-2 rounded-3 mx-0 shadow w-220px">
					<label asp-for="@Model.AccountId" class="form-label"></label>
					<select asp-for="@Model.AccountId">
						@foreach (var account in @Model.Accounts)
						{
							<option value="@account.Id">@account.Name</option>
						}
					</select>
				</div>
				<div class="dropdown-menu position-static d-grid gap-1 p-2 rounded-3 mx-0 shadow w-220px">
					<label asp-for="@Model.TransactionType" class="form-label"></label>
					<select asp-for="@Model.TransactionType">
						<option value="@TransactionType.Income">@TransactionType.Income</option>
						<option value="@TransactionType.Expense">@TransactionType.Expense</option>
					</select>
				</div>
				<div class="form-floating">
					<input type="text" asp-for="@Model.PaymentRefference" class="form-control" />
					<label asp-for="@Model.PaymentRefference" class="form-label"></label>
					<span asp-validation-for="@Model.PaymentRefference" class="text-danger"></span>
				</div>
				<div>
					<button type="submit" class="w-100 btn btn-lg btn-primary">Create</button>
				</div>
			</form>
		</section>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}


