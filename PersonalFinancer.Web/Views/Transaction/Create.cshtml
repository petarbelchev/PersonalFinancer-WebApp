@model TransactionServiceModel
@{
	ViewData["Title"] = "Create Transaction";
}

@if (Model.Accounts.Any())
{
	<h1 class="display-6">@ViewData["Title"]</h1>
	<div class="row">
		<div class="col-md-4">
			<section>
				<form method="post">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<div class="form-floating">
						<input asp-for="@Model.Amount" class="form-control" />
						<label asp-for="@Model.Amount" class="form-label"></label>
						<span asp-validation-for="@Model.Amount" class="text-danger"></span>
					</div>
					<div>
						<label asp-for="@Model.CreatedOn" class="form-label"></label>
						<input asp-for="@Model.CreatedOn" type="text" class="form-control" id="datepicker">
					</div>
					<div class="dropdown-menu position-static d-grid gap-1 p-2 rounded-3 mx-0">
						<label asp-for="@Model.CategoryId" class="form-label"></label>
						<select asp-for="@Model.CategoryId">
							@foreach (var category in @Model.Categories)
							{
								<option value="@category.Id">@category.Name</option>
							}
						</select>
					</div>
					<div class="dropdown-menu position-static d-grid gap-1 p-2 rounded-3 mx-0">
						<label asp-for="@Model.AccountId" class="form-label"></label>
						<select asp-for="@Model.AccountId">
							@foreach (var account in @Model.Accounts)
							{
								<option value="@account.Id">@account.Name</option>
							}
						</select>
					</div>
					<div class="dropdown-menu position-static d-grid gap-1 p-2 rounded-3 mx-0">
						<label asp-for="@Model.TransactionType" class="form-label"></label>
						<select asp-for="@Model.TransactionType">
							<option value="@TransactionType.Income">@TransactionType.Income</option>
							<option value="@TransactionType.Expense">@TransactionType.Expense</option>
						</select>
					</div>
					<div class="form-floating">
						<input type="text" asp-for="@Model.Refference" class="form-control" />
						<label asp-for="@Model.Refference" class="form-label"></label>
						<span asp-validation-for="@Model.Refference" class="text-danger"></span>
					</div>
					<div>
						<button type="submit" class="w-100 btn btn-lg" style="background-color: lawngreen;">Create</button>
					</div>
				</form>
			</section>
		</div>
	</div>
}
else
{
	<div class="text-center">
		<h1 class="display-4">You do not have any created account.</h1>
		<h2 class="display-6"><a asp-controller="Account" asp-action="Create">Create</a> your first account before start record your transactions.</h2>
	</div>
}

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}