@using PersonalFinancer.Web.Models.Account
@model LoginFormModel
@{
	ViewData["Title"] = "Log in";
}

<h1 class="display-4 text-center">@ViewData["Title"]</h1>
<div class="row d-flex justify-content-center">
	<div class="col-sm-6">
		<form id="account" method="post">
			<h2 class="display-6 text-center" style="font-size: 34px;">Use a local account to log in.</h2>
			<hr />
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-floating formField">
				<input asp-for="@Model.Email" class="form-control" autocomplete="username" aria-required="true" />
				<label asp-for="@Model.Email" class="form-label"></label>
				<span asp-validation-for="@Model.Email" class="text-danger"></span>
			</div>
			<div class="form-floating formField">
				<input asp-for="@Model.Password" class="form-control" autocomplete="current-password" aria-required="true" />
				<label asp-for="@Model.Password" class="form-label"></label>
				<span asp-validation-for="@Model.Password" class="text-danger"></span>
			</div>
			<div>
				<div class="checkbox">
					<label asp-for="@Model.RememberMe" class="form-label">
						<input class="form-check-input" asp-for="@Model.RememberMe" />
						@Html.DisplayNameFor(m => m.RememberMe)
					</label>
				</div>
			</div>
			<div>
				<button id="login-submit" type="submit" class="w-100 btn btn-lg btn-secondary">Log in</button>
			</div>
		</form>
		<div style="margin-top: 20px;">
			<a style="text-decoration: none;" asp-action="Register">Don't have an account? Register now!</a>
		</div>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
